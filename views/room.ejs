<!--frontend code-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Treffen - Meet Anywhere!</title>
    <link rel="stylesheet" href="style.css" />                                        <!--importing css file-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tourney:wght@100&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>         <!--peerjs-->
    <script>
      //a random unique id for the room is created and it is stored into the variable 'ROOM_ID'
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="/socket.io/socket.io.js"></script>                                   <!--socket.io-->
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>                 <!--font awesome for icons-->
  </head>
  <body>
    <ul>
      <li>
        <div class="m1">
          <h2><span style="font-family: 'Tourney', cursive; color: rgb(247, 10, 22); font-size: 40px; padding: 50px 30px 0px 0px">Treffen</span></h2>
        </div>
      </li>
      <!--icons-->
      <li style="float:right;">
        <input type="button" id="leaveroom" class="button" value="Leave meeting">        <!--lets the user leave the meeting room-->
      </li>
      <li style="float:right; padding: 10px;">
        <div id="adduser" class="features">              <!--add a new user-->
          <i class="fas fa-user-plus"></i>
        </div>
      </li>
      <li style="float:right; padding: 10px;">
          <div id="cameraicon" class="features">         <!--camera icon to turn on and off video-->
            <i class="fa fa-video-camera"></i>
          </div>
      </li>
      <li style="float:right; padding: 10px;">
        <div id="screenbutton" class="features">         <!--screen share icon-->
          <i class="fa fa-laptop"></i>
        </div>
     </li>
      <li style="float:right; padding: 10px;">
          <div id="micicon" class="features">            <!--mic icon to turn on and off audio-->
            <i class="fa fa-microphone"></i>
          </div>
      </li>
    </ul>
        
    <div class="main">  
    <div class="main__left">
      <div class="allvideos">
        <div id="videospace">
          <!--videos of the connected users gets displayed in this div-->

        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chatbox">
          <div class="allmsgs">
            <!--chat window div-->
          </div>
      </div>
      <div class="main__typing">
        <input id="chatwin" type="text" autocomplete="off" placeholder="Type a new message here!">
        <!--type chat messages-->
        <div id="send">
          <i class="fa fa-paper-plane" style="color: white; font-size: 25px; padding: 10px 10px 10px 10px;"></i>
        </div>
      </div>
    </div>
  </div>
  
  </body>
  <script src="client.js"></script>       <!--importing client.js-->
</html>